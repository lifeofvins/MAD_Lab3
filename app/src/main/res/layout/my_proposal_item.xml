<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myMainContainerProposalID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/distance_between_messages"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myMessageContainerProposalID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/common_message_bubble"
        android:backgroundTint="@color/my_bubble"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Location:"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="#FFFFFF" />

            <TextView
                android:id="@+id/myLocationTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_watch_later_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Starting time:"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="#FFFFFF" />

            <TextView
                android:id="@+id/myStartingTimeTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Duration:"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="#FFFFFF" />

            <TextView
                android:id="@+id/myDurationTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/myProposalTimestampID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="TIMESTAMP"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/timestamp_font_size"
        android:visibility="visible" />
</LinearLayout>
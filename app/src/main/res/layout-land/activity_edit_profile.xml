<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.MAD_Lab2_EditMode"
    tools:context=".ShowProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="323dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit_profilePictureID"
                android:layout_width="78dp"
                android:layout_height="84dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/propic" />

            <EditText
                android:id="@+id/edit_fullnameID_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="@string/fullnamePH"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/prussian_blue"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="@+id/edit_profilePictureID"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edit_profilePictureID"
                app:layout_constraintTop_toBottomOf="@+id/edit_profilePictureID" />

            <EditText
                android:id="@+id/edit_nicknameID_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:text="@string/nickanemPH"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/orange_poli"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edit_fullnameID_land"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edit_fullnameID_land"
                app:layout_constraintTop_toTopOf="@+id/edit_fullnameID_land" />

            <ImageView
                android:id="@+id/edit_verification_badge_ID"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="76dp"
                app:layout_constraintEnd_toEndOf="@+id/edit_profilePictureID"
                app:layout_constraintStart_toStartOf="@+id/edit_profilePictureID"
                app:layout_constraintTop_toTopOf="@+id/edit_profilePictureID"
                app:srcCompat="@drawable/ic_verified_black_24dp"
                app:tint="@color/orange_poli" />

            <EditText
                android:id="@+id/edit_qualificationID_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:text="@string/qualificationPH"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/prussian_blue"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/edit_nicknameID_land"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edit_nicknameID_land"
                app:layout_constraintTop_toTopOf="@+id/edit_nicknameID_land" />

            <ImageView
                android:id="@+id/edit_camera_button"
                android:layout_width="31dp"
                android:layout_height="25dp"
                android:layout_marginStart="52dp"
                android:layout_marginBottom="68dp"
                app:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/edit_profilePictureID"
                app:layout_constraintStart_toStartOf="@+id/edit_profilePictureID"
                app:layout_constraintTop_toTopOf="@+id/edit_profilePictureID"
                app:layout_constraintVertical_bias="0.68"
                app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_land"
            android:backgroundTint="@color/prussian_blue"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/descriptionID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/description_str"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/orange_poli"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_description_show_ID_land"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/default_description_text"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/skillsID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/skills_str"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/orange_poli"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skillsList_static_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/default_skills_text"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_skillsListID_land"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/empty_skills"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/personalInfoID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/information_str"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/orange_poli"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone_static_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_call_black_24dp"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/prussian_blue"
                        android:text="@string/phone_number"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:drawableTint="#FFFFFF" />

                    <EditText
                        android:id="@+id/edit_phone_show_ID_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:text="@string/default_empty_string"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_static_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/prussian_blue"
                        android:text="@string/email_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:drawableTint="#FFFFFF" />

                    <EditText
                        android:id="@+id/edit_email_show_ID_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textEmailAddress"
                        android:text="@string/default_empty_string"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/loc_static_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/prussian_blue"
                        android:text="@string/location_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:drawableTint="#FFFFFF" />

                    <EditText
                        android:id="@+id/edit_loc_show_ID_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/default_empty_string"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
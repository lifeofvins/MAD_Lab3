<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/ShowListTimeslots">

    <fragment
        android:id="@+id/ShowTimeslot"
        android:name="it.polito.group06.views.ShowSingleTimeslot"
        android:label="Timeslot details" >
        <action
            android:id="@+id/action_frag3ShowTimeslot_to_frag4EditTimeslot"
            app:destination="@id/EditTimeslot" />
        <action
            android:id="@+id/action_frag3ShowTimeslot_to_frag5ShowListTimeslots"
            app:destination="@id/ShowListTimeslots" />
    </fragment>
    <fragment
        android:id="@+id/EditTimeslot"
        android:name="it.polito.group06.views.EditSingleTimeslot"
        android:label="Edit timeslot" >
        <action
            android:id="@+id/action_frag4EditTimeslot_to_frag3ShowTimeslot"
            app:destination="@id/ShowTimeslot" />
    </fragment>
    <fragment
        android:id="@+id/ShowListTimeslots"
        android:name="it.polito.group06.views.ShowTimeslotsList"
        android:label="Timeslots" >
        <action
            android:id="@+id/action_frag5ShowListTimeslots_to_frag3ShowTimeslot"
            app:destination="@id/ShowTimeslot" />
        <action
            android:id="@+id/action_frag5ShowListTimeslots_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.group06.views.EditProfileFragment"
        android:label="Edit your profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.group06.views.ShowProfileFragment"
        android:label="Your profile" >
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_showProfileFragment_to_frag5ShowListTimeslots"
            app:destination="@id/ShowListTimeslots" />
    </fragment>
</navigation>